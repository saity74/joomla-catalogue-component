<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_CATALOGUE_FILTER_SEARCH_DESC"
			description="COM_CATALOGUE_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>
		<field
			name="published"
			type="status"
			label="COM_CATALOGUE_FILTER_PUBLISHED"
			description="COM_CATALOGUE_FILTER_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
		<field
			name="category_id"
			type="category"
			label="JOPTION_FILTER_CATEGORY"
			extension="com_catalogue"
			description="JOPTION_FILTER_CATEGORY_DESC"
			onchange="this.form.submit();"
			published="0,1,2"
			>
			<option value="">JOPTION_SELECT_CATEGORY</option>
		</field>
		<field
			name="access"
			type="accesslevel"
			label="JOPTION_FILTER_ACCESS"
			description="JOPTION_FILTER_ACCESS_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_ACCESS</option>
		</field>
		<field
			name="language"
			type="contentlanguage"
			label="JOPTION_FILTER_LANGUAGE"
			description="JOPTION_FILTER_LANGUAGE_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_LANGUAGE</option>
			<option value="*">JALL</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_CATALOGUE_LIST_FULL_ORDERING"
			description="COM_CATALOGUE_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="g.id DESC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="g.ordering ASC">JGRID_HEADING_ORDERING_ASC</option>
			<option value="g.ordering DESC">JGRID_HEADING_ORDERING_DESC</option>
			<option value="g.state ASC">JSTATUS_ASC</option>
			<option value="g.state DESC">JSTATUS_DESC</option>
			<option value="g.title ASC">JGLOBAL_TITLE_ASC</option>
			<option value="g.title DESC">JGLOBAL_TITLE_DESC</option>
			<option value="association ASC" requires="associations">COM_CATALOGUE_SORT_ASSOCIATIONS_ASC</option>
			<option value="association DESC" requires="associations">COM_CATALOGUE_SORT_ASSOCIATIONS_DESC</option>
			<option value="g.access ASC">JGRID_HEADING_ACCESS_ASC</option>
			<option value="g.access DESC">JGRID_HEADING_ACCESS_DESC</option>
			<option value="language ASC">JGRID_HEADING_LANGUAGE_ASC</option>
			<option value="language DESC">JGRID_HEADING_LANGUAGE_DESC</option>
			<option value="g.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="g.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CATALOGUE_LIST_LIMIT"
			description="COM_CATALOGUE_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
