<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_categories/models/fields">
		<field name="id"  type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0"
			readonly="true" />

		<field name="asset_id" type="hidden" filter="unset" />

		<field name="title" type="text" label="JGLOBAL_TITLE"
			description="JFIELD_TITLE_DESC"
			class="input-xxlarge input-large-text"
			size="40"
			required="true" />

		<field name="alias" type="text" label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			hint="JFIELD_ALIAS_PLACEHOLDER"
			size="40" />

		<field name="description" type="editor"
			label="COM_CATALOGUE_FIELD_DESCRIPTION_LABEL" description="COM_CATALOGUE_FIELD_DESCRIPTION_DESC"
			filter="JComponentHelper::filterText" buttons="true" />

		<field name="state" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
			filter="intval" size="1" default="1"
		>
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>

		<field name="catid" type="categorieslist"
			label="JCATEGORIES" description="COM_CATALOGUE_FIELD_ATTRGROUP_CATEGORIES_DESC"
			multiple="true"
			required="true"
		>
		</field>

		<field
			name="buttonspacer"
			description="JGLOBAL_ACTION_PERMISSIONS_DESCRIPTION"
			type="spacer" />

		<field name="checked_out" type="hidden" filter="unset" />

		<field name="checked_out_time" type="hidden" filter="unset" />

		<field name="ordering" type="text" label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC" size="6"
			default="0" />

		<field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC" size="1" />

		<field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL"
			description="COM_CATALOGUE_FIELD_LANGUAGE_DESC"
		>
			<option value="*">JALL</option>
		</field>

		<field name="rules" type="rules" label="JFIELD_RULES_LABEL"
			translate_label="false" filter="rules"
			component="com_catalogue" section="attrgroup" validate="rules"
		/>

	</fieldset>

	<fieldset name="params" label="JGLOBAL_FIELDSET_BASIC">
		<fields name="params">
			<field
					name="filter_type"
					type="list"
					class="chzn-color"
					label="COM_CATALOGUE_FIELD_ATTRGROUP_FILTER_TYPE_LABEL"
					description="COM_CATALOGUE_FIELD_ATTRGROUP_FILTER_TYPE_DESC">
				<option value="">JNONE</option>
				<option value="list">COM_CATALOGUE_FIELD_ATTRGROUP_FILTER_TYPE_SELECT</option>
				<option value="multiselect">COM_CATALOGUE_FIELD_ATTRGROUP_FILTER_TYPE_MULTISELECT</option>
				<option value="checkboxes">COM_CATALOGUE_FIELD_ATTRGROUP_FILTER_TYPE_CHECKBOXES</option>
				<option value="radio">COM_CATALOGUE_FIELD_ATTRGROUP_FILTER_TYPE_RADIO</option>
			</field>

			<field name="filter_default"
				   type="text"
				   label="COM_CATALOGUE_FIELD_ATTRGROUP_FILTER_DEFAULT_LABEL"
				   description="COM_CATALOGUE_FIELD_ATTRGROUP_FILTER_DEFAULT_DESC"
				   size="40" />

			<field name="filter_class"
				   type="text"
				   label="COM_CATALOGUE_FIELD_ATTRGROUP_FILTER_CLASS_LABEL"
				   description="COM_CATALOGUE_FIELD_ATTRGROUP_FILTER_CLASS_DESC"
				   size="40" />

			<field name="filter_title"
				   type="text"
				   label="COM_CATALOGUE_FIELD_ATTRGROUP_FILTER_TITLE_LABEL"
				   description="COM_CATALOGUE_FIELD_ATTRGROUP_FILTER_TITLE_DESC"
				   size="40" />
		</fields>


	</fieldset>
</form>
