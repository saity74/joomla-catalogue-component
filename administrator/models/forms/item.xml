		<field
				name="similar_items"
				type="itemslist"
				multiple="true"
				label="COM_CATALOGUE_FIELD_SIMILAR_LABEL"
				description="COM_CATALOGUE_FIELD_SIMILAR_DESC"/>

		<field
				name="assoc_items"
