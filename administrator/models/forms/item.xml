				format="%Y-%m-%d %H:%M:%S"
				filter="user_utc"/>

		<field
				name="created_by"
				type="user"
				label="COM_CATALOGUE_FIELD_CREATED_BY_LABEL"
				description="COM_CATALOGUE_FIELD_CREATED_BY_DESC"/>

		<field
