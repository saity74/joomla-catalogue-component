			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field
				name="catid"
				type="categoryedit"
				label="JCATEGORY"
				description="JFIELD_CATEGORY_DESC"
				required="true"
				>
		</field>

		<field
				name="tags"
				type="tag"
				label="JTAG"
				description="JTAG_DESC"
				class="span12"
				multiple="true"/>

		<field
				name="images"
				upload_url="index.php?option=com_catalogue&amp;task=item.imageUpload&amp;tmpl=raw"
				type="dropimages"/>

		<field
				name="params"
				type="text"/>

		<field
				name="techs"
				type="text"/>

		<field
				name="buttonspacer"
				description="JGLOBAL_ACTION_PERMISSIONS_DESCRIPTION"
				type="spacer"/>

		<field
