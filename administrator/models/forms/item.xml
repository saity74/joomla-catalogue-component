				/>

		<field
				name="asset_id"
				type="hidden"
				filter="unset"
				/>

		<field
				name="parent_id"
				type="text"
				default="1"
				readonly="true"
				/>

		<field name="sku" type="text"
			   label="COM_CATALOGUE_FIELD_SKU_LABEL"
