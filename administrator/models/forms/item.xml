		<field
				name="count"
				type="text"
				class="inputbox"
				size="40"
				label="COM_CATALOGUE_FIELD_ITEMCOUNT_LABEL"
				description="COM_CATALOGUE_FIELD_ITEMCOUNT_DESC"
				required="false"/>

		<field
				name="techtext"
				type="editor"
				class="text"
				label="COM_CATALOGUE_FIELD_TECHDESC_LABEL"
