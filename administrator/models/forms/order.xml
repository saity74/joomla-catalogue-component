<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details" addfieldpath="/administrator/components/com_catalogue/models/fields">
        <field name="id" type="text" default="0"
               readonly="true" class="readonly"
               label="JGLOBAL_FIELD_ID_LABEL"
               description="JGLOBAL_FIELD_ID_DESC"/>

        <field name="cart_id" type="text" default="0"
               readonly="true" class="readonly"
               label="COM_CATALOGUE_FIELD_CART_ID_LABEL"
               description="COM_CATALOGUE_FIELD_CART_ID_DESC"/>

        <field name="state" type="list" label="JSTATUS"
               description="JFIELD_PUBLISHED_DESC" class="small"
               filter="intval" size="1" default="1"
        >
            <option value="1">
                JPUBLISHED
            </option>
            <option value="0">
                JUNPUBLISHED
            </option>
            <option value="2">
                JARCHIVED
            </option>
            <option value="-2">
                JTRASHED
            </option>
        </field>

    </fieldset>
</form>
